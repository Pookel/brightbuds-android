<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:padding="16dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/txtWelcomeParent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome back!"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:fontFamily="sans-serif-condensed"
            android:gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your little ones are growing with BrightBuds "
            android:textSize="16sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="8dp"
            android:gravity="center" />

    </LinearLayout>

    <!-- Manage Family Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnManageFamily"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage Family"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp"
        app:icon="@drawable/ic_family"
        app:iconGravity="textStart"
        app:cornerRadius="16dp"
        app:backgroundTint="@color/primary"
        android:textColor="@color/white"
        android:paddingVertical="12dp" />

    <!-- Module Overview Header -->
    <TextView
        android:id="@+id/txtModuleOverviewTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Module Overview"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium" />


    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/moduleOverviewChart"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="16dp"
        android:background="@color/white" />

    <!-- Children Container -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/childrenContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="4dp" />

    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:menu="@menu/bottom_nav_parent"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/selector_bottom_nav"
        app:itemTextColor="@color/selector_bottom_nav"
        app:backgroundTint="@color/white" />

</LinearLayout>