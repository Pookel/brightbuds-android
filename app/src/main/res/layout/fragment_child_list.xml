<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/childListFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_soft_gradient"
    android:padding="16dp"
    tools:context=".fragments.ChildListFragment">

    <!-- Header -->
    <TextView
        android:id="@+id/childListTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ðŸ‘§ My Children"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:gravity="center_horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/childListSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage your children's profiles and progress"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <!-- Add New Child Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/addChildButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="âž• Add New Child"
        android:textSize="16sp"
        android:textStyle="bold"
        android:backgroundTint="@color/primary"
        android:textColor="@android:color/white"
        app:cornerRadius="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Children RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/childrenRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:clipToPadding="false"
        android:paddingBottom="16dp"
        tools:listitem="@layout/item_child_card" />

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/emptyStateLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_empty_box"
            android:contentDescription="No children"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No children added yet"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tap 'Add New Child' to create your first profile"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:gravity="center" />
    </LinearLayout>
</LinearLayout>
