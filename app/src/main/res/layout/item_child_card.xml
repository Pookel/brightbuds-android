<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Avatar -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/childImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_default_avatar"
            android:contentDescription="Child Avatar"
            android:layout_marginEnd="16dp" />

        <!-- Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/childNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alex Johnson"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/text_primary" />

            <TextView
                android:id="@+id/childAgeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age: 5"
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />

            <TextView
                android:id="@+id/childLevelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level: Beginner"
                android:textSize="14sp"
                android:textColor="@color/primary" />
        </LinearLayout>

        <!-- Edit Button -->
        <ImageButton
            android:id="@+id/editChildButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/bg_circle_button"
            android:src="@drawable/ic_edit"
            android:contentDescription="Edit Child"
            app:tint="@android:color/white" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
