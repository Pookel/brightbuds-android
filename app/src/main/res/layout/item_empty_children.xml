<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:background="@drawable/bg_soft_gradient">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_add_child"
        android:contentDescription="Add Child Icon"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No children added yet"
        android:textColor="@android:color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add your first child to start tracking progress!"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddFirstChild"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Add Child"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        app:cornerRadius="24dp"
        android:backgroundTint="@color/primary"
        android:layout_marginTop="8dp" />
</LinearLayout>
