<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:background="@drawable/card_background">

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imgModuleIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_report"
            android:contentDescription="@string/learning_progress"
            android:layout_marginEnd="12dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tvModuleName"
                android:text="ABC Song"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/textPrimary"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <TextView
                android:id="@+id/tvPerformanceLevel"
                android:text="Excellent"
                android:textSize="13sp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/textSecondary" />

            <ProgressBar
                android:id="@+id/progressScore"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:progress="85"
                android:progressTint="@color/colorSuccess"
                android:backgroundTint="@color/colorBackground"
                android:layout_marginTop="6dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvScorePercent"
            android:text="85%"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginStart="8dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
