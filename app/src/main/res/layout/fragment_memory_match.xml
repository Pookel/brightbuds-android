<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/memoryMatchRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Full screen monster background like FeedTheMonster -->
    <ImageView
        android:id="@+id/bgImageMemory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/monster_background"
        android:contentDescription="Background" />

    <!-- Main Memory Match UI -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">

            <TextView
                android:id="@+id/tvMMScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Score: 0"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvMMAttempts"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Attempts: 0"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvMMStars"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Stars: 0"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvMMTimer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Time: 00:00"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Spacer that pushes cards down into lower half -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <!-- Card grid: will sit above the hills -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewMemoryMatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:clipToPadding="false" />

        <!-- Bottom spacer: adjusts how high above the hills the cards sit -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />
    </LinearLayout>

    <!-- Reward overlay for sticker board -->
    <FrameLayout
        android:id="@+id/rewardOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#88000000"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true">

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/bg_reward_panel"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imgRewardStar"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/smiling_star" />

            <TextView
                android:id="@+id/tvRewardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="8dp"
                android:text="Sticker Board"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvRewardMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="4dp"
                android:text="You earned stars"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/layoutStarRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center"
                android:orientation="horizontal" />

            <TextView
                android:id="@+id/tvRewardHint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:text="Tap anywhere to play again"
                android:textSize="14sp" />
        </LinearLayout>
    </FrameLayout>

</FrameLayout>
