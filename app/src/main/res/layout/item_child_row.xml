<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@drawable/bg_card"
    android:padding="12dp">

    <ImageView
        android:id="@+id/imgChild"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_user"
        android:background="@drawable/bg_circle_tint"
        android:padding="6dp"
        android:contentDescription="Child avatar" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="12dp">

        <TextView
            android:id="@+id/txtChildName"
            android:text="Emma (6)"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/progressChild"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/progress_bar_buds"
            android:progress="70"
            android:max="100"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="6dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/btnChildMore"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_more"
        app:tint="@color/text_secondary" />
</LinearLayout>
