<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollChildProfile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_soft_gradient"
    android:fillViewport="true"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Child Avatar -->
        <FrameLayout
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="16dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/childAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_default_avatar"
                android:contentDescription="Child Avatar"
                android:background="@drawable/bg_avatar_border" />

            <ImageButton
                android:id="@+id/btnUploadAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/bg_circle_button"
                android:contentDescription="Upload Photo"
                android:padding="8dp"
                android:src="@drawable/ic_camera"
                app:tint="@color/white" />
        </FrameLayout>

        <!-- Title -->
        <TextView
            android:text="Child Profile"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="24dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <!-- Profile Info Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Child Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/childNameLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:startIconDrawable="@drawable/ic_user"
                    app:startIconTint="@color/primary"
                    app:boxStrokeColor="@color/primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/childNameEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Full Name"
                        android:inputType="textPersonName"
                        android:textSize="16sp"
                        android:padding="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Age -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/childAgeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:startIconDrawable="@drawable/ic_cake"
                    app:startIconTint="@color/primary"
                    app:boxStrokeColor="@color/primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/childAgeEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Age"
                        android:inputType="number"
                        android:textSize="16sp"
                        android:padding="16dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Gender -->
                <TextView
                    android:text="Gender"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <RadioGroup
                    android:id="@+id/genderRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <RadioButton
                        android:id="@+id/radioMale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textColor="@color/text_primary"
                        android:layout_marginEnd="16dp" />

                    <RadioButton
                        android:id="@+id/radioFemale"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:textColor="@color/text_primary" />
                </RadioGroup>

                <!-- Learning Level -->
                <TextView
                    android:text="Learning Level"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginBottom="8dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>

                <Spinner
                    android:id="@+id/spinnerLearningLevel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:entries="@array/learning_levels"
                    android:spinnerMode="dropdown" />

                <!-- Notes -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/notesLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Additional Notes"
                    app:boxStrokeColor="@color/primary"
                    android:layout_marginBottom="8dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/notesEditText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:minLines="3"
                        android:maxLines="5"
                        android:textSize="16sp"
                        android:padding="16dp" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Save Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/saveChildButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Profile"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/primary"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            android:padding="14dp"
            android:layout_marginBottom="16dp" />

        <!-- Delete Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/deleteChildButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete Profile"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/error"
            android:textColor="@android:color/white"
            app:cornerRadius="12dp"
            android:padding="14dp"
            android:visibility="gone" />
    </LinearLayout>
</ScrollView>
