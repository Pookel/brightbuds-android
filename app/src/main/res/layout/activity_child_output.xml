<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_all"
    android:padding="16dp">

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/family_tree1"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textColor="#000000" />

    <!-- Main profile image centered under title -->
    <ImageView
        android:id="@+id/childImage"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:layout_below="@id/titleText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:scaleType="centerCrop"
        android:src= "@drawable/familymodule_icon"
        android:contentDescription="@string/main_profile" />

    <TextView
        android:id="@+id/childName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="26sp"
        android:textStyle="bold"
        android:layout_below="@id/childImage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:textColor="#000000" />

    <!-- Start Game Button (uses familymodule_icon as drawableStart if you like) -->
    <Button
        android:id="@+id/startGameBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_game"
        android:layout_below="@id/childName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:paddingLeft="18dp"
        android:paddingRight="18dp"
        android:drawablePadding="8dp"
        android:backgroundTint="#FF9800"
        android:textColor="#FFFFFF" />

</RelativeLayout>
