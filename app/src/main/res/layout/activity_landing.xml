<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_soft_gradient"
    android:padding="24dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Logo -->
        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/ic_brightbuds_logo"
            android:contentDescription="BrightBuds Logo"
            android:layout_marginTop="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BrightBuds"
            android:textColor="@color/primary"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Learning made fun for little minds!"
            android:textColor="@color/text_secondary"
            android:textSize="16sp"
            android:layout_marginTop="6dp"
            android:gravity="center" />

        <!-- Demo Section -->
        <TextView
            android:id="@+id/txtFreeModules"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŽ Try these free learning videos!"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:textSize="18sp"
            android:gravity="center"
            android:layout_marginTop="36dp"
            android:layout_marginBottom="16dp" />

        <!-- Cute Demo Tiles -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/imgAbcSong"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_music"
                android:contentDescription="ABC Song"
                android:padding="0dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/img123Song"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_numbers"
                android:contentDescription="123 Song"
                android:padding="0dp"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <!-- CTA Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parent Sign In"
            android:backgroundTint="@color/primary"
            android:textColor="@color/white"
            app:cornerRadius="16dp"
            android:layout_marginTop="40dp"
            android:padding="14dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRegister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create Account"
            android:backgroundTint="@color/white"
            android:textColor="@color/primary"
            app:strokeColor="@color/primary"
            app:strokeWidth="2dp"
            app:cornerRadius="16dp"
            android:layout_marginTop="12dp"
            android:padding="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Unlock all modules by registering!"
            android:textColor="@color/text_secondary"
            android:textSize="13sp"
            android:layout_marginTop="8dp"
            android:gravity="center" />
    </LinearLayout>
</ScrollView>
