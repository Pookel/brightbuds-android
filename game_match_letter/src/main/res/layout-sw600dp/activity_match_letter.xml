<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C3E6F5"
    tools:context=".MatchLetterActivity">

    <nl.dionsegijn.konfetti.xml.KonfettiView
        android:id="@+id/konfettiView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/homeButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/home_icon"
        android:contentDescription="Home Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="48dp"
        android:src="@drawable/close_icon"
        android:contentDescription="Close Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/characterView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/centerLetter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.45"
        app:layout_constraintVertical_bias="0.9"
        android:contentDescription="Character"/>

    <TextView
        android:id="@+id/centerLetter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="A"
        android:textColor="#043B49"
        android:textSize="300sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.45"/>

    <GridLayout
        android:id="@+id/star_accumulation_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:columnCount="13"
        android:rowCount="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/letter1"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle_red"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:tag="A"
        android:text="A"
        android:textColor="#FFFFFF"
        android:textSize="64sp"
        android:textStyle="bold"
        app:layout_constraintCircle="@id/centerLetter"
        app:layout_constraintCircleAngle="240"
        app:layout_constraintCircleRadius="300dp" />

    <TextView
        android:id="@+id/letter2"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle_orange"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:tag="B"
        android:text="B"
        android:textColor="#FFFFFF"
        android:textSize="64sp"
        android:textStyle="bold"
        app:layout_constraintCircle="@id/centerLetter"
        app:layout_constraintCircleAngle="300"
        app:layout_constraintCircleRadius="300dp" />

    <TextView
        android:id="@+id/letter3"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle_yellow"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:tag="D"
        android:text="D"
        android:textColor="#FFFFFF"
        android:textSize="64sp"
        android:textStyle="bold"
        app:layout_constraintCircle="@id/centerLetter"
        app:layout_constraintCircleAngle="0"
        app:layout_constraintCircleRadius="300dp" />

    <TextView
        android:id="@+id/letter4"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle_purple"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:tag="G"
        android:text="G"
        android:textColor="#FFFFFF"
        android:textSize="64sp"
        android:textStyle="bold"
        app:layout_constraintCircle="@id/centerLetter"
        app:layout_constraintCircleAngle="60"
        app:layout_constraintCircleRadius="300dp" />

    <TextView
        android:id="@+id/letter5"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/circle_green"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:tag="H"
        android:text="H"
        android:textColor="#FFFFFF"
        android:textSize="64sp"
        android:textStyle="bold"
        app:layout_constraintCircle="@id/centerLetter"
        app:layout_constraintCircleAngle="120"
        app:layout_constraintCircleRadius="300dp" />

</androidx.constraintlayout.widget.ConstraintLayout>